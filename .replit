modules = ["flutter", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["flutter", "librsvg", "android-tools"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Server"

[[workflows.workflow]]
name = "Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web && python3 -m http.server 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "flutter create . --platforms=web && flutter run -d web-server --web-port=5000 --web-hostname=0.0.0.0"]

[[ports]]
localPort = 5000
externalPort = 80
